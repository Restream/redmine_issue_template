<h2><%= @issue_template.new_record? ? l(:label_issue_template_new) : l(:label_issue_template_edit) %></h2>
<% form_for @issue_template, :builder => TabularFormBuilder, :html => {:class => "tabular"} do |f| %>
  <p><%= f.text_field :title %></p>
  <p><%= f.text_area :content %></p>
  <p><%= submit_tag l(:button_save) %></p>

  <%= javascript_tag "Form.Element.focus('issue_template_title');" %>
<% end %>
